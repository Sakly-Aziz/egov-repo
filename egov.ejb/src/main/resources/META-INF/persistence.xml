	<class>egov.entities.Bills_fines</class>
	<class>egov.entities.Car</class>
	<class>egov.entities.Cin</class>
	<class>egov.entities.Claims</class>
	<class>egov.entities.DriveLicence</class>
	<class>egov.entities.GreyCard</class>
	<class>egov.entities.Inscription</class>
	<class>egov.entities.Job</class>
	<class>egov.entities.User</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
